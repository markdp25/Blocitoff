<% @items.each do |item| %>
  <div class="media" id="item-<%= item.id %>">
    <div class="media-body">
      <h4 class="media-heading">
        <%= item.name %>
        <% if current_user == @user %>
          : <%= link_to 'Completed!', [item.user, item], method: :delete, remote: true, class: 'glyphicon glyphicon-ok' %>
        <% end %>
      </h4>
      <small>
        submitted <%= time_ago_in_words(item.created_at) %> ago <br>
      </small>
    </div>
  </div>
<% end %>
